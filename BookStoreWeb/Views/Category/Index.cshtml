@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-1"></i>Create New Category</a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Dispaly Order
            </th>
                <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.DisplayOrder
                </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="me-1 text-warning" asp-controller="Category" asp-action="Edit" asp-route-id=@category.Id> <i class="bi bi-pencil-square me-1"></i>Edit</a>
                            <a class="me-1 text-danger" asp-controller="Category" asp-action="Delete" asp-route-id=@category.Id> <i class="bi bi-trash me-1"></i>Delete</a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>
</table>
</div>


@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 form-group">
            <label class="form-label" asp-for="Name"></label>
            <input class="form-control" asp-for="Name" value="" />
            <span asp-validation-for=@Model.Name class="text-danger"></span>
        </div>
        <div class="mb-3 form-group">
            <label  class="form-label" asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" value="" />
           <span asp-validation-for=@Model.DisplayOrder class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">
            Create
        </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


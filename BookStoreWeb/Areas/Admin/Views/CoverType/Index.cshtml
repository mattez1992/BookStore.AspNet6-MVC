@model IEnumerable<BookStore.Models.DomainModels.DbModels.CoverType>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-1"></i>Create New Cover</a>
        </div>
    </div>
    <br /><br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="w-50">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="btn-group w-100" role="group">
                            <a class="me-1 btn btn-warning" asp-controller="CoverType" asp-action="Edit" asp-route-id=@item.Id> <i class="bi bi-pencil-square me-1"></i>Edit</a>
                            <a class="me-1 btn btn-danger" asp-controller="CoverType" asp-action="Delete" asp-route-id=@item.Id> <i class="bi bi-trash me-1"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model CoverType
@{
    ViewData["Title"] = "Edit";
}
<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Cover Type</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for=@Model.Id />
        <div class="mb-3 form-group">
            <label class="form-label" asp-for=@Model.Name></label>
            <input class="form-control" asp-for=@Model.Name/>
            <span asp-validation-for=@Model.Name class="text-danger"></span>
        </div>     
        <button type="submit" class="btn btn-primary">
            Update
        </button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary">Back to list</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}